# condor config
#

# GPU slots, the system will automaticall pick up one gpu per slot
SLOT_TYPE_1 = cpu=2,mem=auto,disk=auto,swap=auto

# CPU slots, there should not be any gpus left
SLOT_TYPE_2 = cpu=1,mem=2000,disk=5%,swap=5%

# Compute number of slots
include : /etc/condor/scripts/count_slots.config.sh |

