#!/bin/bash 

#
# Download a file from the download Cloud storage location
#

if [ $# -ne 2 ]; then
  echo "ERROR: Missing arguments" 1>&2
  echo "Usage: exa_cloud_download cloudpath localfile" 1>&2
  exit 1
fi

cloud_path=`./my_mangle "$1"`
if [ $? -ne 0 ]; then
  echo "ERROR: Failed parsing cloudpath: ${cloud_path}" 1>&2
  exit 1
fi

apath="$(realpath $2)"
dpath="$(dirname $apath)"
lpath="$(basename $apath)"

rm -f "${apath}"
aria2c --max-tries=32 --retry-wait=1 -q -j 80 -x 16 -d "${dpath}" -o "${lpath}" "${cloud_path}"
rc=$?
if [ $rc -ne 0 ]; then
  # saw DNS problems before... try with less agressive setup
  rm -f "${apath}"
  aria2c --max-tries=32 --retry-wait=1 --async-dns=false -q -j 80 -x 16 -d "${dpath}" -o "${lpath}" "${cloud_path}"
  rc=$?
fi
if [ $rc -ne 0 ]; then
  # ok, the storage may be quite overloaded... wait a tiny bit, and retry
  sleep 5
  rm -f "${apath}"
  aria2c --max-tries=32 --retry-wait=1 --async-dns=false -q -j 80 -x 16 -d "${dpath}" -o "${lpath}" "${cloud_path}"
  rc=$?
fi
if [ $rc -ne 0 ]; then
  # we have to give up, eventually
  echo "ERROR: Download of ${cloud_path} failed." 2>&1
  echo "ERROR: Download of ${cloud_path} failed." 1>&2
else
  echo "INFO: Downloaded ${cloud_path} into ${apath}" 
fi
exit $rc

